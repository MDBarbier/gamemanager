@model GameEntry

@{
    ViewData["Title"] = "View Dlc";
}

<div class="jumbotron text-center">
    <h1>View DLC for @Model.Name</h1>    
</div>

<div class="container">

    <div class="row">
        <div class="table table-striped">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Owned</th>
                        <th>Price</th>
                        <th>Rating</th>
                        <th>Ranking</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var item in Model.Dlc.Values)
                        {
                            var computedRanking = item.Owned ? "N/A" : item.Ranking.ToString();

                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Owned</td>
                            <td>@item.Price</td>
                            <td>@item.Rating</td>
                            <td>@computedRanking</td>
                            <td>
                                <button class="btn btn-secondary" onclick="location.href='@Url.Action("Edit", "Home", new { id = item.Id })'" title="Edit" value="Edit">Edit</button>
                            </td>

                        </tr>
                    }
                    </tbody>
                </table>                
            </div>
        </div>

        <div class="row">
            <button class="btn btn-primary" onclick="location.href='@Url.Action("AddDlc", "Home", new { id = Model.Id })'" title="AddDlc" value="AddDlc">Add Dlc</button>
        </div>

    </div>

