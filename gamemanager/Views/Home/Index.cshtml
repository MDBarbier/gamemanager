@model List<gamemanager.Models.GameEntry>

@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center">
    <h1>Game manager</h1>
    <p>Games I want and am playing</p>
</div>

<div class="container">

    <div class="row">
        <div class="table table-striped">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Genre</th>
                        <th>Owned</th>
                        <th>Price</th>
                        <th>Rating</th>
                        <th>Ranking</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Genre</td>
                            <td>@item.Owned</td>
                            <td>@item.Price</td>
                            <td>@item.Rating</td>
                            <td>@item.Ranking</td>
                            <td><button class="btn btn-default" onclick="location.href='@Url.Action("Edit", "Home", new { id = item.Id })'" title="Edit" value="Edit">Edit</button></td>

                        </tr>

                    }
                    </tbody>
                </table>
            </div>
        </div>

    <div class="row">
        <div class="col-12"><button class="btn btn-primary" onclick="location.href='@Url.Action("New", "Home")'" title="New" value="New">New</button></div>
    </div>

    </div>

